<form action="{""|fn_url}" method="post" name="vendor_terms_form" class="cm-form-highlight">
	<div id="shipping_terms_{$smarty.const.COMPANY_ID}" class="form-field">
		<label for="shipping_terms">{$lang.sdeep_shipping_terms}:</label>
		<textarea id="shipping_terms" name="terms[shipping]" class="input-text-large">{$terms.shipping}</textarea>
	</div>
	<div id="guarantee_terms_{$smarty.const.COMPANY_ID}" class="form-field">
		<label for="guarantee_terms">{$lang.sdeep_guarantee_terms}:</label>
		<textarea id="guarantee_terms" name="terms[guarantee]" class="input-text-large">{$terms.guarantee}</textarea>
	</div>
	<div id="return_terms_{$smarty.const.COMPANY_ID}" class="form-field">
		<label for="return_terms">{$lang.sdeep_return_terms}:</label>
		<textarea id="return_terms" name="terms[return]" class="input-text-large">{$terms.return}</textarea>
	</div>
	<div class="buttons-container buttons-bg">
		<div class="cm-buttons-placeholder">
			<div class="float-left">
				{include file="buttons/save.tpl" but_name="dispatch[vendor_terms.update]" but_role="button_main"}
			</div>
		</div>
	</div>
</form>

